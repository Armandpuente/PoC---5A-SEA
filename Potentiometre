const int sensorPin = 15;  // pin that the sensor is attached to 
// pin that the LED is attached to 
// variables: 
int sensorValue = 0;   // the sensor value 
int sensorMin = 190;  // minimum sensor value 
int sensorMax = 4095;     // maximum sensor value 

void setup() { 
  // turn on LED to signal the start of the calibration period: 
 // pinMode(13, OUTPUT); 
 // digitalWrite(13, HIGH); 
  
} 
 
void loop() { 
  // read the sensor: 
  sensorValue = analogRead(sensorPin); 

  // in case the sensor value is outside the range seen during calibration 
  sensorValue = constrain(sensorValue, sensorMin, sensorMax); 
 
  // apply the calibration to the sensor reading 
  sensorValue = map(sensorValue, sensorMin, sensorMax, 0, 16); 
 
  sensorValue = constrain(sensorValue, 0, 16); 
  lcd.setCursor(0,0);
  lcd.print(sensorValue); 
} 